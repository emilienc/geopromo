source 'http://rubygems.org'

gem 'rails', '3.0.3'


gem 'pg', '=0.9.0' #database supporting geoloc 
gem 'devise'#authentication
gem "acts_as_geocodable" #Geocoding
gem 'plist' #to exchange with iphones
gem 'paperclip'
gem 'paperclipftp' #useful to upload photos



# Bundle gems for the local environment. Make sure to
# put test-only gems in this group so their generators
# and rake tasks are available in development mode:
group :development, :test do
    gem 'pickle'
    gem 'nifty-generators'
    gem 'capybara'           # better than webrat
    gem 'database_cleaner'   # clean database between tests
    gem 'cucumber-rails'
    gem 'cucumber'
    gem 'rspec-rails'
    gem 'spork'
    gem 'factory_girl_rails'
    gem "mocha"
    gem "rcov"
end

