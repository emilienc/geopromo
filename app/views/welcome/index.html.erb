<table>
  <tr>
    <th>User</th>
    <th>Description</th>
    <th>Debut</th>
    <th>Fin</th>
  </tr>
  <% for promotion in @promotions %>
    <tr>
      <td><%= promotion.user_id %></td>
      <td><%= promotion.description %></td>
      <td><%= promotion.debut %></td>
      <td><%= promotion.fin %></td>
